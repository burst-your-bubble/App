{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Server",
            "type": "shell",
            "command": "source .env/bin/activate && python3 server/server.py"
        },
        {
            "label": "Static Build",
            "type": "shell",
            "command": "npm run watch"
        },
        {
            "label": "Launch Browser",
            "type": "shell",
            "command": "/usr/bin/open -a \"/Applications/Google Chrome.app\" 'http://localhost:5000/'"
        },
        {
            "label": "Start Application",
            "dependsOn": [
                "Start Server",
                "Static Build",
                "Launch Browser"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}